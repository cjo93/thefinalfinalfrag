{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Voice Agent Schema",
    "oneOf": [
        {
            "title": "Audio Output",
            "type": "object",
            "required": [
                "audioUrl",
                "duration",
                "format"
            ],
            "properties": {
                "audioUrl": {
                    "type": "string",
                    "format": "uri"
                },
                "duration": {
                    "type": "number"
                },
                "format": {
                    "type": "string",
                    "enum": [
                        "mp3",
                        "wav",
                        "pcm"
                    ]
                },
                "transcript": {
                    "type": "string"
                },
                "visemes": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    },
                    "description": "Lip sync data if needed"
                }
            },
            "additionalProperties": false
        },
        {
            "$ref": "error.schema.json"
        },
        {
            "$ref": "hold.schema.json"
        }
    ]
}