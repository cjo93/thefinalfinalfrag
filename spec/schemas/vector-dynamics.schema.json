{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Vector Dynamics Agent Schema",
    "oneOf": [
        {
            "title": "Success Output",
            "type": "object",
            "required": [
                "vectors",
                "globalEntropy",
                "timestamp"
            ],
            "properties": {
                "vectors": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "id",
                            "position",
                            "velocity",
                            "role"
                        ],
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "role": {
                                "type": "string"
                            },
                            "position": {
                                "type": "object",
                                "required": [
                                    "x",
                                    "y",
                                    "z"
                                ],
                                "properties": {
                                    "x": {
                                        "type": "number"
                                    },
                                    "y": {
                                        "type": "number"
                                    },
                                    "z": {
                                        "type": "number"
                                    }
                                }
                            },
                            "velocity": {
                                "type": "object",
                                "required": [
                                    "x",
                                    "y",
                                    "z"
                                ],
                                "properties": {
                                    "x": {
                                        "type": "number"
                                    },
                                    "y": {
                                        "type": "number"
                                    },
                                    "z": {
                                        "type": "number"
                                    }
                                }
                            },
                            "tension": {
                                "type": "number"
                            }
                        }
                    }
                },
                "globalEntropy": {
                    "type": "number"
                },
                "stabilityScore": {
                    "type": "number"
                },
                "timestamp": {
                    "type": "string",
                    "format": "date-time"
                }
            },
            "additionalProperties": false
        },
        {
            "$ref": "error.schema.json"
        },
        {
            "$ref": "hold.schema.json"
        }
    ]
}