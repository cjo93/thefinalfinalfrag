{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Regime Definition",
    "type": "object",
    "required": [
        "regimes"
    ],
    "properties": {
        "regimes": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "thresholds",
                    "uiMode",
                    "narrativeAllowed"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "thresholds": {
                        "type": "object",
                        "properties": {
                            "latencyMs": {
                                "type": "number"
                            },
                            "errorRate": {
                                "type": "number"
                            },
                            "systemLoad": {
                                "type": "number"
                            }
                        }
                    },
                    "uiMode": {
                        "type": "string",
                        "enum": [
                            "DEFAULT",
                            "MINIMAL",
                            "DEBUG",
                            "STABILIZE"
                        ]
                    },
                    "narrativeAllowed": {
                        "type": "boolean"
                    },
                    "holdMessage": {
                        "type": "string"
                    }
                }
            }
        }
    }
}